;
(function(win) {

  var debugFlag = '<%= debug_flag %>' || false;
  var buildVersion = '<%= build_version %>' || 'no version'
  var environmentType = '<%= environment_type %>' || 'localhost'
  var imagesDir = '<%= images_dir %>' || ''
  var dataDir = '<%= data_dir %>' || ''

  Logger.useDefaults();

  if (debugFlag === false) {
    Logger.setLevel(Logger.ERROR);
  }

  win.__site_namespace__ = '<%= site_namespace %>';

  var namespace = win.__site_namespace__ + '.Main';

  var logger = Logger.get(namespace);

  logger.info('Debug Flag --> ', debugFlag);
  logger.info('Build Version --> ', buildVersion);
  logger.info('Environment Type --> ', environmentType);
  logger.info('Images Directory --> ', imagesDir);
  logger.info('Data Directory --> ', dataDir);

  var Main = Namespace(namespace);

  Main.debugFlag = debugFlag;
  Main.buildVersion = buildVersion;
  Main.environmentType = environmentType;
  Main.imagesDir = imagesDir;
  Main.dataDir = dataDir;

}(window));