// Create closure to protect global namespace
;
(function(win) {

  // Assign application properties
  var debugFlag = '<%= debug_flag %>' || false;
  var buildVersion = '<%= build_version %>' || 'no version'
  var environmentType = '<%= environment_type %>' || 'localhost'

  // Configure Logger
  Logger.useDefaults();

  if (debugFlag === false) {
    Logger.setLevel(Logger.ERROR);
  }

  // Alias site namespace
  win.__site_namespace__ = '<%= site_namespace %>';

  // Create module namespace
  var namespace = win.__site_namespace__ + '.App';

  // Create module logger
  var logger = Logger.get(namespace);

  logger.info('Debug Flag --> ', debugFlag);
  logger.info('Build Version --> ', buildVersion);
  logger.info('Environment Type --> ', environmentType);

  // Create module
  var App = Namespace(namespace);

  App.debugFlag = debugFlag;
  App.buildVersion = buildVersion;
  App.environmentType = environmentType;

}(window));